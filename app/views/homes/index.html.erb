<h1>Homes#index</h1>
<p>Find me in app/views/homes/index.html.erb</p>
<h2>Sign up</h2>

<%= form_for(User.new, url: registration_path(User)) do |f| %>
  <%= render "devise/shared/error_messages", resource: User.new %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :name, "Nombre" , class: "label-dark", style: "display: block" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :photo, "Imagen de perfil" , class: "label-dark", style: "display: block" %>
    <%= f.file_field :photo, autofocus: true, autocomplete: "Perfil" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>